<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg_shape"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="6dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <com.fangs.apar_app.utils.HelveticaNormalTextView
            android:id="@+id/tv_product_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="10sp"
            android:textColor="@color/black"/>

        <com.fangs.apar_app.utils.HelveticaNormalTextView
            android:id="@+id/tv_product_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="THIS IS A PRODUCT NAME"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:orientation="vertical">
                <com.fangs.apar_app.utils.HelveticaNormalTextView
                    android:id="@+id/tv_product_price_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Price"
                    android:textColor="@color/black"
                    tools:ignore="SmallSp" />
                <com.fangs.apar_app.utils.HelveticaNormalTextView
                    android:id="@+id/tv_item_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="1995.12"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.80"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">
                <com.fangs.apar_app.utils.HelveticaBoldTextView
                    android:id="@+id/tv_add_quantity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="+"
                    android:gravity="center"
                    android:background="@drawable/dialog_bg_shape"
                    android:backgroundTint="@color/ThemeDarkGreen"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <com.fangs.apar_app.utils.HelveticaBoldTextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="0"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:textSize="15sp"/>
                <com.fangs.apar_app.utils.HelveticaBoldTextView
                    android:id="@+id/tv_subtract_quantity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/red"
                    android:text="-"
                    android:background="@drawable/dialog_bg_shape"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_shopping_cart_24"
                    android:layout_marginStart="30dp"
                    app:tint="@color/black" />



            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>