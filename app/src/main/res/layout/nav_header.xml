<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical"
        android:background="@drawable/main_bg">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_user"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fangs.apar_app.utils.HelveticaBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome APAR 713!"
                android:textColor="@color/white"/>
            
            <com.fangs.apar_app.utils.HelveticaNormalTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aling Puring Account Representative"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:background="@drawable/cornered_gold"
                tools:ignore="SmallSp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>