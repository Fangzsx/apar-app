<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/main_bg">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_user"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fangs.apar_app.utils.HelveticaBoldTextView
                android:id="@+id/tv_apar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garzon, Jay Gilbert S."
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.fangs.apar_app.utils.HelveticaNormalTextView
                    android:id="@+id/tv_apar_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APAR 1"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/cornered_gold"
                    tools:ignore="SmallSp" />

                <com.fangs.apar_app.utils.HelveticaNormalTextView
                    android:id="@+id/tv_store_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STORE 713"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/cornered_violet"
                    tools:ignore="SmallSp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <com.fangs.apar_app.utils.HelveticaNormalTextView
                    android:id="@+id/tv_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/cornered_red"
                    tools:ignore="SmallSp" />

                <com.fangs.apar_app.utils.HelveticaNormalTextView
                    android:id="@+id/tv_cluster_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="CLUSTER 1"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/cornered_blue"
                    tools:ignore="SmallSp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>