<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_bg_shape">

    <com.fangs.apar_app.utils.HelveticaBoldTextView
        android:id="@+id/tv_product_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_bg"
        android:text="Product Selected"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.fangs.apar_app.utils.HelveticaNormalTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select from the following products"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
            <SearchView
                android:id="@+id/sv_product_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_bg_shape"
                android:backgroundTint="@color/gray"
                android:queryHint="Search"
                android:iconifiedByDefault="false"
                android:layout_margin="10dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_products"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"/>
                <com.fangs.apar_app.utils.HelveticaNormalTextView
                    android:id="@+id/tv_list_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="List is Empty"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:gravity="center"/>

            <com.fangs.apar_app.utils.HelveticaCustomButton
                android:id="@+id/btn_return"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Return to Categories"/>
        </LinearLayout>



</LinearLayout>